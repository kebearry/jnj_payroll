extend ./layouts/main.pug

include ./components/title.pug

block preheader
  | #{`Payslip for ${generatedMonth}`}.

block content
  p
    span= t(`Dear `)
    b= name
    | ,
  p.text-black= t(`We attached a ${generatedMonth} payslip below:`)
  #table-wrapper
  table.table-pre#desc
    tr.tr
      th.th
      | #{`${title}:`}.
    tr.tr
      td.td #{`Total gross: ${grossIncome}`}
    tr.tr
      td.td #{`Less employee CPF: ${employeeCPF}`}
    tr.tr
      td.td #{`Less Additional Funds: ${additionalDeduction}`}
    tr.tr#total
      td.td #{`Total Net Pay: ${netIncome}`}